        scaleControl: true,
        mapTypeId:google.maps.MapTypeId.ROADMAP
      };
      var map = new google.maps.Map(document.getElementById("map"),mapProp);
      var myLatLng = {lat: lat, lng: lon};
      var marker = new google.maps.Marker({
        position: myLatLng,
        map: map,
        title: loc
      });
    }

    $(document).ready(function(){
