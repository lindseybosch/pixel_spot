<!DOCTYPE html>
<html>
<head>
  <$- include('../partials/head') $>
</head>
<body>
  <$- include('../partials/header', {subHeading: 'Welcome'}) $>
  <main>

   <div class="container-fluid box" id="indexView">

     <div id="indexHeader">
       <p>Top Spots</p>
     </div>

     <div class="row indexTemplate">
       <$ spots.forEach(function (spot) { $>

         <div class="col-md-4 welcomeIndexSpotContainer box-shadow--4dp">

           <div>
            <a href="spots/<$= spot._id $>">
             <img class="maxImageWidth box-shadow--2dp" src=<$= spot.image_url $>>
            </a>
           </div>

          <div id="indexText">
          <p id="title"> <$= spot.title $> </p>

          <span> Rating: <$= spot.rating $> </span>
          </div>

         </div>

       <$ }); $>
     </div>

   </div>

  </main>
  <$- include('../partials/scripts') $>
</body>
</html>
